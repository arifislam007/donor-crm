{
    "name": "ngo/donor-system",
    "description": "NGO Donor Registration and Management System",
    "type": "project",
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "controllers\\": "controllers/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "echo Autoloading classes..."
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
