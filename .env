APP_NAME="NGO Donor System"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=ngo_donor_system
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Email Configuration (SendGrid)
MAIL_MAILER=sendgrid
MAIL_FROM_ADDRESS=noreply@ngodonation.org
MAIL_FROM_NAME="NGO Donor System"
SENDGRID_API_KEY=

# Session
SESSION_SECRET=your-session-secret-key-here

# Currency Configuration
CURRENCY=BDT
CURRENCY_SYMBOL=à§³
EXCHANGE_RATE_TO_USD=0.0091

# Payment Gateway Configuration
# Set to 'sandbox' for testing, 'live' for production
PAYMENT_MODE=sandbox

# SSLCommerz (sslcommerz.com)
SSLCOMMERZ_STORE_ID=your_store_id
SSLCOMMERZ_STORE_PASSWORD=your_store_password
SSLCOMMERZ_SANDBOX=true

# Nagad (nagad.com.bd)
NAGAD_MERCHANT_ID=your_merchant_id
NAGAT_MERCHANT_NUMBER=your_merchant_number
NAGAD_SANDBOX=true

# Bkash (bkash.com)
BKASH_APP_KEY=your_app_key
BKASH_APP_SECRET=your_app_secret
BKASH_USERNAME=your_username
BKASH_PASSWORD=your_password
BKASH_SANDBOX=true

# Rocket (dbbl.com.bd/rocket)
ROCKIT_MERCHANT_ID=your_merchant_id
ROCKIT_MERCHANT_NUMBER=your_merchant_number
ROCKIT_DBBL_ROCKET_PASSWORD=your_password
ROCKIT_SANDBOX=true
